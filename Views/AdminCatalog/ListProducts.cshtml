@model IEnumerable<ECommerce.Models.Product>

<h2>Danh sách sản phẩm</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0")</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@item.Id">Sửa</a> |
                    <form asp-action="DeleteProduct" asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" onclick="return confirm('Bạn chắc chắn?')">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
