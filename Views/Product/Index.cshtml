@model IEnumerable<ECommerce.Models.Product>


<h2>Sản phẩm</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Danh mục</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Product" asp-action="Details" asp-route-slug="@item.Slug">
                        @item.Name
                    </a>
                </td>
                <td>@item.Price.ToString("N0")</td>
                <td>@item.Category?.Name</td>
            </tr>
        }
    </tbody>
</table>
