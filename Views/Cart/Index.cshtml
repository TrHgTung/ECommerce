@model List<ECommerce.Models.CartItem>

<h2>Giỏ hàng của bạn</h2>

@if (Model == null || !Model.Any())
{
    <p>Giỏ hàng đang trống.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price.ToString("N0") VNĐ</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price* item.Quantity).ToString("N0") VNĐ</td>
                    <td>
                        <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId"
                            class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a class="btn btn-success" asp-action="Checkout">Thanh toán</a>
    </p>
}
